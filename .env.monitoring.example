# Wise Owl Monitoring Environment Configuration
# Copy this to .env.monitoring and update with your values

# Grafana Configuration
GRAFANA_ADMIN_PASSWORD=secure_admin_password

# MongoDB Connection for Monitoring
MONGODB_URI=mongodb://buddy:password@wo-mongodb:27017/?authSource=admin

# Alertmanager Configuration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/DISCORD/WEBHOOK

# Email Configuration for Alerts
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Monitoring Storage Configuration
PROMETHEUS_RETENTION=30d
LOKI_RETENTION=720h

# Network Configuration
MONITORING_NETWORK=wo-monitoring
APPLICATION_NETWORK=wise-owl-network

# External Monitoring (Optional)
EXTERNAL_PROMETHEUS_URL=
EXTERNAL_GRAFANA_URL=

# Security Configuration
ENABLE_BASIC_AUTH=true
MONITORING_USERNAME=monitor
MONITORING_PASSWORD=secure_monitor_password

# Jaeger Configuration
JAEGER_SAMPLING_RATE=0.1
JAEGER_STORAGE_TYPE=memory

# Resource Limits
PROMETHEUS_MEMORY_LIMIT=512M
GRAFANA_MEMORY_LIMIT=256M
LOKI_MEMORY_LIMIT=256M

root = "."
tmp_dir = "tmp"

[build]
  bin = "./tmp/main"
  cmd = "go build -o ./tmp/main ./services/SERVICE_NAME/cmd"
  delay = 1000
  exclude_dir = ["tmp", "vendor", ".git"]
  exclude_regex = ["_test.go"]
  include_dir = ["services/SERVICE_NAME", "lib", "gen"]
  include_ext = ["go", "json"]
  kill_delay = "2s"
  poll = true
  poll_interval = 500
  send_interrupt = true

[color]
  build = "yellow"
  main = "magenta"
  runner = "green"
  watcher = "cyan"

[log]
  time = false

[misc]
  clean_on_exit = false
